{
  "version": 2,

  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",

  "functions": {
    "server.js": { "runtime": "nodejs18.x" }
  },

  "routes": [
    { "src": "/api/(.*)", "dest": "server.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}